
@{
    ViewData["Title"] = "Leaderboard";
}

<h1>Leaderboard</h1>
<table class="table table-striped table-hover">
    <thead class="thead-dark">            
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th>Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Rank</td>
                <td>@item.User.Username</td>
                <td>@item.Points</td>
            </tr>
        }
    </tbody>
</table>
