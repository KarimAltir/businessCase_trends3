@model IEnumerable<buisnessCase_trends3.Models.Achievement>

@{
    ViewData["Title"] = "Achievements";
}

<h1>Achievements</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Points</th>
            <th>Claimed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var achievement in Model)
        {
            <tr>
                <td>@achievement.Id</td>
                <td>@achievement.Name</td>
                <td>@achievement.Description</td>
                <td>@achievement.Points</td>
                <td>@(achievement.IsClaimed ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
