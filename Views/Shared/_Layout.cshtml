<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Trends III - Businesscase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/buisnessCase_trends3.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f0f8ff; /* Light blue background */
            color: #333; /* Dark text color for contrast */
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Full viewport height */
        }

        .navbar {
            background-color: #1e90ff; /* Dodger blue for the navbar */
            border-bottom: 3px solid #4682b4; /* Steel blue bottom border */
        }

        .navbar-brand {
            color: #ffffff; /* White color for brand name */
            font-size: 1.75rem; /* Larger font size for brand name */
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #ffffff; /* White color for links */
            font-size: 1.1rem; /* Slightly larger font size */
        }

            .navbar-nav .nav-link:hover {
                color: #ffd700; /* Gold color on hover */
                border-bottom: 2px solid #ffd700; /* Gold underline on hover */
            }

        .container {
            background-color: #ffffff; /* White background for content area */
            border-radius: 8px; /* Rounded corners */
            padding: 20px; /* Padding around content */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Thicker shadow for depth */
            margin: 20px auto; /* Centered content */
            max-width: 1200px; /* Max width to limit content width */
            border: 2px solid #4682b4; /* Steel blue border */
        }

        footer {
            background-color: #1e90ff; /* Same blue as the navbar */
            color: #ffffff; /* White text color */
            padding: 20px 0; /* Padding for the footer */
            text-align: center; /* Centered text */
            margin-top: auto; /* Push footer to the bottom of the page */
            border-top: 3px solid #4682b4; /* Steel blue top border */
        }

            footer .footer-title {
                color: #ffd700; /* Gold color for the title */
                font-size: 1.5rem; /* Smaller font size for the title */
                font-weight: bold;
                margin-bottom: 10px; /* Spacing below the title */
            }

            footer p {
                margin: 0; /* Remove default margin */
                font-size: 1rem; /* Font size for text */
            }

            footer a {
                color: #ffd700; /* Gold color for footer links */
                text-decoration: none; /* Remove underline */
            }

                footer a:hover {
                    text-decoration: underline; /* Underline on hover */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kanban Quest</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tasks" asp-action="Index">Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Leaderboard" asp-action="Show">Leaderboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Achievements" asp-action="Index">Achievements</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="footer-title">Kanban Quest</div>
            <p>&copy; 2024 Kanban Quest. All rights reserved.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
